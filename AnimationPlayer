using UnityEngine;
using UnityEngine.InputSystem; 

public class PlayerAnim : MonoBehaviour
{
    public Animator animator;
    public SpriteRenderer spriteRenderer;

    void Awake()
    {
        if (animator == null) animator = GetComponent<Animator>();
        if (spriteRenderer == null) spriteRenderer = GetComponent<SpriteRenderer>();
    }

    void Update()
    {
        float moveInput = 0;
        if (Keyboard.current.aKey.isPressed) moveInput = -1;
        else if (Keyboard.current.dKey.isPressed) moveInput = 1;
        
        bool isClicking = Mouse.current.leftButton.isPressed;

        if (animator != null)
        {
            animator.SetBool("IsRunnin", moveInput != 0);
            animator.SetBool("IsClicking", isClicking);
        }

        if (spriteRenderer != null)
        {
            if (moveInput > 0) spriteRenderer.flipX = false;
            else if (moveInput < 0) spriteRenderer.flipX = true;
        }
    }
}
